#static method

class student:
    def __init__(self,name,marks):
        self.name = name
        self.marks = marks

    @staticmethod
    def hello():
        print("Hello")

    def get_avg(self):
        sum = 0

        for val in self.marks:
         sum = sum + val
        print("hi",self.name,"Your average score are :- ",sum/3)

s1 = student("soham",[99,98,95])
s1.get_avg()
s1.hello()

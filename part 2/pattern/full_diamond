n = int(input("Enter the number :- "))
k = int(input("Enter the number :- "))

print("\n")
for i in range(1,n+1):
    for j in range(1,i+1):
        if (j<=n-i):
            print(" ",end = " ")
        else :
            print(" * ",end = " ")
    print(" ")
    
for i in range(k,0,-1):
    for j in range(1,k+1):
        if (j<=k-i):
            print(" ",end = "  ")
        else :
            print(" * ",end = "  ")
    print(" ")
